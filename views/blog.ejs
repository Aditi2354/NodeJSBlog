<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Homepage</title>
</head>

<body>
 <%- include('./partials/nav', { user: user }) %>


   <div class="container">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" width="200px" />
    <pre class="mt-3"><%= blog.body %></pre>
   </div>

    
  

<% if (user && blog.createdBy && blog.createdBy._id.toString() === user._id.toString()) { %>
  <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger mt-3">Delete Blog</button>
  </form>
<% } %>


<div class="container mt-4">
<img  src="<%= blog.createdBy.profileImageURL %>" width="50px"/><%= blog.createdBy.fullName %>
</div>



<div class="container mt-3">

<h1>Comments <%= comments.length %></h1>

<% if (user) { %>
  <form action="/blog/comment/<%= blog._id %>" method="POST">
    <div class="mb-3">
      <input type="text" name="content" class="form-control" placeholder="Write a comment..." />
      <button type="submit" class="btn btn-primary mt-2">Post</button>
    </div>
  </form>
<div class="mt-3">
  <% comments.forEach(comment => { %>
    <div class="comment-container" style="margin-bottom: 1rem;">
      <img src="<%= comment.createdBy.profileImageURL %>" width="50px" alt="Profile Image" />
      <strong><%= comment.createdBy.fullName %>:</strong>
      <pre style="margin: 0;"><%= comment.content %></pre>
    </div>
  <% }) %>
</div>




<% } else { %>
  <p>Please <a href="/user/signin">sign in</a> to comment.</p>
<% } %>

</div>
  <!-- Page content goes here -->
    <%- include('./partials/scripts') %>
</body>
</html>
