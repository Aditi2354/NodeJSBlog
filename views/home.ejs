<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>BLOG</title>
</head>
<body>

    <%- include('./partials/nav', { user: user }) %>
     
  <div class="container mt-3">
  <div class="row g-4">
    <% blogs.forEach(blog => { %>
      <div class="col-md-6"> <!-- 2 cards per row on medium+ screens -->
        <div class="card flex-row shadow-sm" style="height: 180px;"> <!-- horizontal card -->
          <img src="<%= blog.coverImageURL %>" 
               class="card-img-left" 
               alt="Cover Image"
               style="width: 55%; height: 100%; object-fit: cover; border-top-left-radius: 0.25rem; border-bottom-left-radius: 0.25rem;">

          <div class="card-body d-flex flex-column justify-content-between">
            <h5 class="card-title"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto" style="width: fit-content;">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>

    <%- include('./partials/scripts') %>
</body>
</html>